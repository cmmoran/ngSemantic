{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "es2016",
      "dom"
    ],
    "noImplicitAny": true,
    "declaration": true,
    "inlineSources": false,
    "inlineSourceMap": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "files": [
    "ng-semantic.ts"
  ]
}
